<resources>

    <style name="CheckoutTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/pm_green700</item>
        <item name="colorPrimaryDark">@color/pm_green700</item>
        <item name="colorControlNormal">@color/pm_green700</item>
        <item name="colorSecondary">@color/pm_green700</item>
        <item name="colorOnPrimary">@color/pm_white</item>
        <item name="android:colorBackground">@color/pm_white</item>
        <item name="colorOnBackground">@color/pm_gray800</item>
        <item name="colorSurface">@color/pm_white</item>
        <item name="colorOnSurface">@color/pm_gray800</item>
        <item name="colorError">@color/pm_red</item>

        <item name="textAppearanceSubtitle1">@style/TextAppearance.Checkout.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Checkout.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Checkout.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Checkout.Body2</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Checkout.Headline6</item>
        <item name="textAppearanceButton">@style/TextAppearance.Checkout.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Checkout.Caption</item>

        <item name="materialButtonStyle">@style/Widget.Checkout.Button.UnelevatedButton</item>
        <item name="textInputStyle">@style/Widget.Checkout.TextInputLayout</item>
        <item name="switchStyle">@style/Widget.Checkout.Switch</item>
        <item name="snackbarStyle">@style/Widget.Checkout.Snackbar</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Checkout.MaterialAlertDialog</item>
        <item name="materialCardViewStyle">@style/Widget.Checkout.CardView</item>
    </style>

    <style name="ThemeOverlay.Checkout.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.Checkout</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Checkout.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Checkout.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Checkout.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Checkout.Button.TextButton.Dialog</item>
    </style>

    <style name="CheckoutTheme.Toolbar">
        <item name="toolbarStyle">@style/Widget.Checkout.Toolbar</item>
        <item name="android:statusBarColor">@color/pm_gray300</item>
    </style>

    <style name="CheckoutTheme.NoToolbar">
        <item name="android:statusBarColor">@color/pm_gray300</item>
    </style>
</resources>
