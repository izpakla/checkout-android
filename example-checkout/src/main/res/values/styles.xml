    <style name="TextAppearance.Custom.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Custom.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="Widget.Custom.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Custom.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.Custom.Headline6</item>
        <item name="titleTextColor">?attr/colorOnBackground</item>
        <item name="android:elevation" tools:targetApi="21">@dimen/pmtoolbar_elevation</item>
    </style>

    <style name="ThemeOverlay.Custom.Toolbar" parent="">
        <item name="colorPrimary">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Custom.Button.UnelevatedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:minHeight">@dimen/pmbutton_height</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Custom.SmallComponent</item>
    </style>

    <style name="Widget.Custom.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.Custom.MediumComponent</item>
        <item name="cardElevation">@dimen/pmcard_elevation</item>
        <item name="strokeWidth">@dimen/pmcard_stroke</item>
        <item name="cardForegroundColor">@color/pm_transparent</item>
        <item name="strokeColor">@color/custom_card_stroke_color</item>
    </style>

    <style name="Widget.Custom.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Custom.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Custom.SmallComponent</item>
        <item name="errorIconDrawable">@null</item>
        <item name="android:textColorHint">@color/custom_darkgray_alpha32</item>
        <item name="helperTextTextColor">?attr/colorPrimary</item>
        <item name="endIconTint">@color/custom_filled_icon_tint</item>
        <item name="boxStrokeColor">@color/custom_textinputlayout_stroke_color</item>
    </style>

    <style name="ThemeOverlay.Custom.TextInputLayout" parent="">
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Custom.Body1</item>
        <item name="android:textColorPrimary">?attr/colorOnBackground</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="Widget.Custom.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="trackTint">@color/custom_switch_track_tint</item>
    </style>

    <style name="Widget.Custom.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">?attr/colorOnSurface</item>
    </style>

    <style name="MaterialAlertDialog.Custom" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.Custom.MediumComponent</item>
    </style>

    <style name="MaterialAlertDialog.Custom.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="MaterialAlertDialog.Custom.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.Custom.Button.TextButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="shapeAppearance">@style/ShapeAppearance.Custom.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.Custom.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/pmradius</item>
    </style>
