<resources>

    <style name="PaymentTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/pm_green700</item>
        <item name="colorPrimaryDark">@color/pm_green700</item>
        <item name="colorControlNormal">@color/pm_green700</item>
        <item name="colorSecondary">@color/pm_green700</item>
        <item name="colorOnPrimary">@color/pm_white</item>
        <item name="android:colorBackground">@color/pm_white</item>
        <item name="colorOnBackground">@color/pm_gray800</item>
        <item name="colorSurface">@color/pm_white</item>
        <item name="colorOnSurface">@color/pm_gray800</item>
        <item name="colorError">@color/pm_red</item>

        <item name="textAppearanceSubtitle1">@style/TextAppearance.Payment.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Payment.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Payment.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Payment.Body2</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Payment.Headline6</item>
        <item name="textAppearanceButton">@style/TextAppearance.Payment.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Payment.Caption</item>

        <item name="materialButtonStyle">@style/Widget.Payment.Button.UnelevatedButton</item>
        <item name="textInputStyle">@style/Widget.Payment.TextInputLayout</item>
        <item name="switchStyle">@style/Widget.Payment.Switch</item>
        <item name="snackbarStyle">@style/Widget.Payment.Snackbar</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Payment.MaterialAlertDialog</item>
        <item name="materialCardViewStyle">@style/Widget.Payment.CardView</item>
    </style>

    <style name="ThemeOverlay.Payment.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.Payment</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Payment.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Payment.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Payment.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Payment.Button.TextButton.Dialog</item>
    </style>

    <style name="PaymentTheme.Toolbar">
        <item name="toolbarStyle">@style/Widget.Payment.Toolbar</item>
        <item name="android:statusBarColor">@color/pm_gray300</item>
    </style>

    <style name="PaymentTheme.NoToolbar">
        <item name="android:statusBarColor">@color/pm_gray300</item>
    </style>
</resources>
